{
    "$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
    "organizeImports": {
      "enabled": false
    },
    "formatter": {
      "enabled": true,
      "indentWidth": 4,
      "indentStyle": "tab",
      "lineWidth": 100
    },
    "vcs": {
	"enabled": true,
	"clientKind": "git",
	"useIgnoreFile": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded"
        }
    }
  }
